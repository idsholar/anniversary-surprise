    <script>
        // Generate floating hearts for OMG background
        function createHearts() {
            const heartsContainer = document.querySelector('.hearts');
            for (let i = 0; i < 20; i++) {
                const heart = document.createElement('div');
                heart.className = 'heart';
                heart.innerHTML = '‚ù§Ô∏è';
                heart.style.left = `${Math.random() * 100}vw`;
                heart.style.animationDelay = `${Math.random() * 5}s`;
                heart.style.animationDuration = `${10 + Math.random() * 10}s`;
                heartsContainer.appendChild(heart);
            }
        }
        createHearts();

        function unlockReveal() {
            const name = document.getElementById('name').value.trim();
            const funFact = document.getElementById('fun-fact').value.trim();
            if (name && funFact) {
                document.getElementById('form-container').style.display = 'none';
                document.getElementById('reveal').style.display = 'block';
                // Trigger OMG confetti!
                confetti({
                    particleCount: 200,
                    spread: 100,
                    origin: { y: 0.6 },
                    colors: ['#ff4081', '#e91e63', '#ffccbc'],
                    disableForReducedMotion: true
                });
            } else {
                alert('Please fill in both fields for the full surprise!');
            }
        }
    </script>
